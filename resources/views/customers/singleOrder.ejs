<section class="status">
  <div class="container mx-auto">
    <div class="status-box w-2/3 mx-auto">
       
        <div class=" text-center  md:flex items-center justify-between mt-7 mb-12">
            <h1 class="text-xl font-bold">Track Delievery status!!</h1>
            <h2 class=" bg-white py-1 rounded-full px-4 text-green-600 text-xs"><%=order._id %></h2>
        </div>
        <input id="hidden_Input" type="hidden" value="<%=JSON.stringify(order) %>">
        <ul>
            <li class="staus_line  text-xl pb-16 " data-status="order_placed"><span>Order Placed</span></li>
            <li class="staus_line  text-xl pb-16"  data-status="confirmed"><span>Order Confirmed</span></li>
            <li class="staus_line  text-xl pb-16"  data-status="prepared"><span>Preparation</span></li>
            <li class="staus_line  text-xl pb-16"  data-status="delivered"><span>Out for Delivery</span></li>
            <li class="staus_line  text-xl"  data-status="completed"><span>Complete</span></li>
        </ul>
    </div>
  </div>
</section>