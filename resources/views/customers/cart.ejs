<section class="cart">
    <div class=" order container mx-auto w-1/2">
        <div class="text-left border-b border-gray-300 py-8">
            <h1 class="text-2xl font-bold mx-7 md:text-2xl font-bold ">ðŸ›’ Order Summary</h1>
        </div>
        <%if(session.cart){ %>

            <div class="pizza-list justify-between ">
                <!-- ----------- -----------------------------------item----------------------------------------------------- -->
                <% for(let pizza of Object.values(session.cart.item)){%>
                    <div class="my-7 mx-7 md:flex justify-between my-7">
                        <img class="w-24 pt-2" src="/img/<%=pizza.item.image %>" alt="pizza_image">
                       <div class="pt-6 ">
                       <h1 class="text-xl font-bold"><%=pizza.item.name %></h1>
                       <span lass="text-lg"><%=pizza.item.size %></span>
                      </div>
                      <span class=" text-lg md:text-lg pt-6"><%= pizza.Qty%>Pcs</span>
                      <hr>
                       <span class="text-xl font-bold md:text-xl font-bold pt-6">$<%=pizza.Qty*pizza.item.price%></span>
                    </div>
                <%} %>
             
           <!-- ----------------------------------------------------------- total amount section -------------------------- -->
            <hr class="border-b border-gray-300">
            <h1 class="font-bold text-xl text-right my-5">Total Amount:<span class="total-amount font-bold"> $<%=session.cart.totalPrice %></span></h1>
    
            <!------------------------------------------------------ input section--------------------------------------------- -->
            <% if(user) { %>
            <div class="px-4 sm:px-6 lg:px-8">
                <form action="/orders" method="post" class="mt-6 "  id="payment-form">
                    <select id="paymentType" name="paymentType" class=" max-w-sm  mb-5 bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
                        <option selected>Choose Payment Method</option>
                        <option value="COD">Cash on Delivery(COD)</option>
                        <option value="card">Card Payment</option>
                      </select>
                    <input class="border border-gray-400 p-2 w-full sm:w-1/2 mb-4" type="text" placeholder="Phone Number" name="Phone_Number">
                    <input class="border border-gray-400 p-2 w-full sm:w-1/2 mb-4" type="text" placeholder="Address" name="Address">
                    <div id="card-element" class="mt-2">

                    </div>
                    <button class="order_now_button  px-4 py-2  rounded-full text-white font-bold mt-5 mb-5  block w-full sm:w-auto" type="submit">Order Now</button>
                </form>
            </div>
            <% } else { %>
            <a href="/login" class="order_now_button  px-4 py-2 ml-3 rounded-full text-white font-bold mt-5 mb-5  block sm:inline-block">Login to Continue</a>
            <% } %>
            
            
        </div>


        <%}else{ %>
          
            <div class="empty-cart">
                <div class="container mx-auto text-center flex flex-col items-center">
                    <h1 class="py-6 font-bold text-2xl sm:text-3xl lg:text-4xl">Empty Cart ðŸ˜”</h1>
                    <p class="mb-12  text-lg sm:text-xl lg:text-2xl text-gray-500">You have not ordered anything yets</p>
                    
                    <img class="mx-auto my-5 h-auto max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg rounded-lg" src="/img/empty-cart.png" alt="cart_image">
                    <a href="/" >
                        <button class="order_now_button  px-4 py-2  rounded-full text-white font-bold mt-12 mb-5 ">Go Back</button>
                    </a>
                </div>
            </div>

       <% } %>
       
   
   
</section>

