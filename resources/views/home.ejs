    <section class="hero py-16">
      <div class="container flex flex-col md:flex-row items-center justify-between">
        <div class="k justify-center md:pl-16 md:w-1/2">
          <h6 class="text-lg pb-3"><em>Are you hungry?</em></h6>
          <h1 class="text-4xl md:text-6xl font-bold pb-5">Don't Wait!!</h1>
          <button class=" order_now_button  mx-4 px-6 py-2 rounded-full text-white font-bold mt-4">Order Now</button>
        </div>
        <div class=" pt-6 md:w-1/2 ">
          <img class="mx-auto pl-6 " src="/img/hero-pizza.png" alt="hero-pizza" />
        </div>
      </div>
